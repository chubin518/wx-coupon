<!--searchbar.wxml-->

<template name="searchbar">
        <view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{searchParam.inputVal}}" focus="{{searchParam.inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{searchParam.inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <label class="weui-search-bar__label" wx:if="{{!searchParam.inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">
                   输入关键字找有券商品
                    </view>
                </label>
            </view>
            <view class="weui-search-bar__cancel-btn" style="display:{{searchParam.inputShowed?'block':'none'}}" bindtap="hideInput">取消</view>
</view>
</template>