/* index.wxss */
@import "../templates/loadmore/loadmore.wxss";
@import "../templates/productbox/productbox.wxss";
@import "../templates/searchbar/searchbar.wxss";

.line {
  height: 0px;
  margin-top: 46px;
}

.swiper-container {
  width: 100%;
  position: relative;
}

.swiper-box {
  width: 100%;
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 400rpx;
}

.skill {
  margin-top: 8px;
  background-color: white;
  width: 100%;
}

.skill-top {
  height: 42rpx;
  line-height: 42rpx;
  padding: 20rpx;
  border-bottom: 1px solid #f7f7f7;
  font-size: 14px;
}

.skill-left {
  width: 126rpx;
  height: 40rpx;
  border-left: 3px solid red;
  padding-left: 8px;
}

.skill-center {
  color: #222;
  text-align: center;
}

.skill-center i {
  color: red;
}

.skill-right {
  position: relative;
  padding-right: 3px;
  font-size: 12px;
}

.skill-list {
  height: 315rpx;
  display: flex;
  white-space: nowrap;
}

.skill-list .skill-li {
  width: 115px;
  height: 100%;
  position: relative;
  margin-left: 10px;
  text-align: center;
  display: inline-block;
}

.skill-list .skill-li:last-child {
  margin-right: 3%;
}

.coupon-wrapper {
  background-color: #ff970f;
  color: white;
  font-size: 12px;
  min-width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  top: 20rpx;
  right: 0;
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}

.skill-vipprice {
  color: #777;
  line-height: 24px;
}

.skill-vipprice text {
  font-size: 14px;
  color: red;
}

.skill-title {
  line-height: 24px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.skill-img, .skill-img image {
  width: 100%;
  height: 210rpx;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.icon-link-wrapper {
  display: flex;
  height: 180rpx;
  background-color: #fff;
  width: 100%;
  white-space: nowrap;
  padding-bottom: 3px;
}

.icon-link-wrapper .item {
  flex: 1 0 auto;
  display: inline-block;
  width: 25%;
}

.icon-link-wrapper .item .item-img {
  height: 120rpx;
  width: 110rpx;
  text-align: center;
  margin: 0 auto;
  padding-top: 10rpx;
}

.icon-link-wrapper .item .item-img image {
  height: 100rpx;
  width: 100rpx;
  margin: 0 auto;
}

.icon-link-wrapper .item .item-text {
  text-align: center;
}

.cat-container {
  width: 100%;
  height: 75rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: 8px;
  padding-bottom: 3px;
}

.cat-navbar {
  white-space: nowrap;
  height: 75rpx;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.cat-box {
  width: 120rpx;
  box-sizing: content-box;
  line-height: 73rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.cat-narbar-item {
  border-bottom: 2px solid #fff;
}

.cat-item-on {
  border-bottom: 2px solid #e64340;
}
