/* index.wxss */
@import "../templates/loadmore/loadmore.wxss";
@import "../templates/productbox/productbox.wxss";

.container {
  background-color: #faf5f6;
  min-height: 100%;
}

.swiper-container {
  width: 750rpx;
  position: relative;
}

.swiper-box {
  width: 100%;
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 300rpx;
}

.skill {
  margin-top: 5rpx;
  background-color: white;
  width: 100%;
}

.skill-top {
  height: 42rpx;
  line-height: 42rpx;
  padding: 20rpx;
  border-bottom: 1px solid #f7f7f7;
  font-size: 26rpx;
}

.skill-left {
  width: 126rpx;
  height: 40rpx;
  border-left: 3px solid red;
  padding-left: 10rpx;
}

.skill-center {
  margin-left: 24rpx;
  color: #222;
}

.skill-center i {
  color: red;
  font-size: 26rpx;
}

.skill-right {
  position: relative;
  padding-right: 3rpx;
}

.skill-list {
  height: 290rpx;
  display: flex;
  white-space: nowrap;
}

.skill-list .skill-li {
  width: 25%;
  height: 100%;
  position: relative;
  margin-left: 3%;
  text-align: center;
  display: inline-block;
}

.skill-list .skill-li:last-child {
  margin-right: 3%;
}

.coupon-wrapper {
  background-color: #ff970f;
  color: white;
  font-size: 24rpx;
  min-width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  top: 20rpx;
  right: 0;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.skill-vipprice {
  color: #777;
  font-size: 22rpx;
  line-height: 32rpx;
  margin-top: 16rpx;
}

.skill-vipprice text {
  font-size: 28rpx;
  color: red;
  font-weight: bold;
}

.skill-title {
  font-size: 26rpx;
  line-height: 30rpx;
  margin-top: 4rpx;
  white-space: nowrap;
  overflow: hidden;
}

.skill-img, .skill-img image {
  width: 188rpx;
  height: 188rpx;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.icon-link-wrapper {
  display: flex;
  height: 170rpx;
  padding: 5rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  width: 100%;
}

.icon-link-wrapper .item {
  flex: 1;
}

.icon-link-wrapper .item .item-img {
  height: 120rpx;
  width: 110rpx;
  text-align: center;
  margin: 0 auto;
  padding-top: 10rpx;
}

.icon-link-wrapper .item .item-img image {
  height: 110rpx;
  width: 100%;
  margin: 0 auto;
}

.icon-link-wrapper .item .item-text {
  font-size: 26rpx;
  color: #aaa;
  text-align: center;
}

.cat-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: 5rpx;
}

.cat-navbar {
  white-space: nowrap;
  display: flex;
  height: 88rpx;
  background-color: #fff;
}

.cat-box {
  width: 120rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 72rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.cat-narbar-item {
  border-bottom: 3rpx solid #fff;
}

.cat-item-on {
  border-bottom: 3rpx solid #e64340;
}
