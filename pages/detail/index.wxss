/* index.wxss */
@import "../templates/productbox/productbox.wxss";

.shopheader {
  display: flex;
  padding: 0 10px;
  border-top: 1px solid #f7f7f7;
  padding-top: 3px;
}

.shopinfo {
  padding-left: 10px;
  color: #a3a3a3;
}

.shopinfo .shoptitle {
  height: 25px;
  line-height: 25px;
}

.shopicon image {
  width: 50px;
  height: 50px;
}

.product-info-evaluates {
  display: flex;
  text-align: center;
  font-size: 12px;
  line-height: 25px;
}

.product-info-evaluates .evaluates-item {
  flex: 1 0 auto;
  padding-right: 15px;
}

.product-info-evaluates .evaluates-item .score {
  color: red;
  padding-left: 3px;
}

.goods-tab-box {
  background-color: white;
  margin-top: 10px;
}

.goods-tab-nav {
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2px solid #ededed;
  text-align: center;
  font-size: 16px;
  width: 50%;
  box-sizing: content-box;
}

.goods-content {
  margin-top: 3px;
}

.goods-tab-nav.on {
  border-bottom: 2px solid #e64340;
}

.swiper-container {
  width: 100%;
  padding: 0px;
  margin: 0px;
}

.swiper-box {
  width: 100%;
  height: 715rpx;
  margin: 0px;
  padding: 0px;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 100%;
}

.goods-info {
  background-color: #fff;
  margin-bottom: 8px;
  width: 100%;
  margin: 0px;
}

.product-info-title {
  word-break: break-all;
  word-wrap: break-word;
  text-align: left;
  font-size: 16px;
  padding: 10px;
  position: relative;
  overflow: hidden;
  padding-bottom: 5px;
}

.product-info-price {
  color: #ccc;
  line-height: 1.5;
  vertical-align: middle;
  padding-bottom: 5px;
  padding-left: 10px;
}

.product-info-price text {
  color: #a3a3a3;
  display: inline-block;
}

.product-info-price .price {
  color: red;
  padding: 0 10rpx;
  display: inline-block;
  font-weight: bold;
  font-size: 18px;
}

.product-info-price .soldprice {
  margin-left: 5px;
  text-decoration: line-through;
  font-size: 12px;
}

.product-info-price .sold-wrapper {
  position: relative;
  float: right;
  padding-right: 12px;
  margin-top: 3px;
}

.product-info-price .sold-wrapper .sold-numq {
  color: #ecabab;
}

.product-info-price .sold-wrapper .text {
  color: #a3a3a3;
}

.product-info-title .taobao {
  background: url(https://51hui.xin/images/taobao.png) 0 0 no-repeat;
  width: 16px;
  height: 16px;
  display: block;
  float: left;
  margin-top: 3px;
  margin-right: 5px;
}

.product-info-title .tianmao {
  background: url(https://51hui.xin/images/tmall.png) 0 0 no-repeat;
  width: 16px;
  height: 16px;
  display: block;
  float: left;
  margin-top: 3px;
  margin-right: 5px;
}

.product-info-coupon {
  position: relative;
  float: left;
  left: 150px;
  margin-top: 3px;
}

.product-info-coupon .c-text {
  position: absolute;
  left: 0;
  width: 21px;
  text-indent: 5px;
  background-color: #ff6a00;
  line-height: 18px;
  color: white;
}

.product-info-coupon .coupon-price {
  position: absolute;
  left: 21px;
  margin: 0;
  text-indent: 0;
  text-align: center;
  padding: 0 5px;
  color: #ff6a00;
  line-height: 16px;
  border: #ff9950 1px solid;
}

.product-sold {
  color: #aaa;
  font-size: 0.7rem;
  position: relative;
  padding-left: 19px;
  margin-top: 8px;
  float: right;
}

.product-sold i {
  width: 15px;
  height: 12px;
  position: absolute;
  left: 0;
  top: 2px;
  background-size: 100%;
}

.product-sold b {
  color: #ff6a00;
  font-weight: normal;
  font-family: Arial;
}

.product_details {
  background-color: white;
  margin-top: 5px;
  margin-bottom: 10px;
}

.product_details-top {
  height: 48rpx;
  line-height: 48rpx;
  padding: 20rpx;
  border-bottom: 1px solid #f7f7f7;
  font-size: 16px;
}

.product_details-left {
  height: 48rpx;
  border-left: 3px solid red;
  padding-left: 10px;
}

.product-info-Images {
  display: block;
}

.product-info-Images .image {
  width: 100%;
}

.instruction-body {
  padding: 20rpx;
  line-height: 28px;
  background-color: white;
}

.instruction {
  background-color: white;
  margin-top: 10px;
  margin-bottom: 10rpx;
  height: 180px;
}

.instruction-top {
  height: 48rpx;
  line-height: 48rpx;
  padding: 20rpx;
  border-bottom: 1px solid #f7f7f7;
  font-size: 16px;
}

.instruction-left {
  height: 48rpx;
  border-left: 3px solid red;
  padding-left: 10px;
}

.instruction-body {
  padding: 20rpx;
  line-height: 28px;
  background-color: white;
}

ol {
  list-style-type: demical;
  width: 100%;
  margin: 0px;
  padding: 0px;
}

ol li {
  color: #575757;
  display: block;
  padding-left: 8px;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0 0 8rpx 0;
  line-height: 100rpx;
  border: 0;
}

.footer-box .price {
  padding-left: 10px;
  width: 45%;
  font-size: 14px;
}

.footer-box .coupon {
  text-align: center;
  width: 50px;
  height: 100%;
  background-color: #f69919;
  color: #fff;
  font-size: 13px;
  line-height: 50rpx;
  word-wrap: break-word;
  padding: 0 15px 0 15px;
}

.footer-box .now-buy {
  text-align: center;
  height: 100%;
  width: 35%;
  line-height: 100rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 18px;
}

.footer {
  height: 120rpx;
  background-color: white;
}

.getSuccess {
  width: 100%;
  height: 100rpx;
  background-color: #f69919;
  position: fixed;
  bottom: 0;
  left: 0;
  display: inline-block;
  box-shadow: 0 0 8rpx 0;
  line-height: 100rpx;
  border: 0;
  color: #fff;
  font-size: 16px;
  margin: 0 auto;
  text-align: center;
}

.contactbutton {
  border: none;
  line-height: 100rpx;
  color: white;
  background-color: #e64340;
  border-radius: 0px;
}
