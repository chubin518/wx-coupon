/* index.wxss */

.swiper-container {
  width: 750rpx;
  position: relative;
}

.swiper-box {
  width: 100%;
  height: 510rpx;
}

swiper-item image {
width:100%;
display:inline-block;
overflow:hidden;
height:100%;
}

.goods-info {
  background-color: #fff;
  padding: 10px;
  margin-bottom: 8px;
  width: 100%;
}

.product-title {
  word-break: break-all;
  word-wrap: break-word;
  text-align: left;
  margin-right: 15px;
}

.product-price {
  color: #ccc;
  line-height: 1.5;
  padding-top: 10px;
  padding-right: 10px;
  vertical-align: middle;
}

.product-price text {
  color: #a3a3a3;
  display: inline-block;
}

.product-price .price {
  color: red;
  font-size: 14px;
  padding: 0 10rpx;
  display: inline-block;
  font-weight: bold;
}

.product-price .sold-wrapper {
  position: relative;
  float: right;
  padding: 3px 15px 0 0;
}

.product-price .sold-wrapper .sold-num {
  color: #ecabab;
}

.product-price .sold-wrapper .text {
  color: #a3a3a3;
}

.product-coupon {
  position: relative;
  float: left;
  left: 120px;
}

.product-coupon .c-text {
  position: absolute;
  left: 0;
  width: 19px;
  text-indent: 5px;
  height: 17px;
  background-color: #ff6a00;
  line-height: 18px;
  color: white;
}

.product-coupon .coupon-price {
  position: absolute;
  left: 17px;
  margin: 0;
  font-size: 12px;
  text-indent: 0;
  text-align: center;
  padding: 0 5px;
  color: #ff6a00;
  line-height: 16px;
  height: 15px;
  border: #ff9950 1px solid;
}

.product-sold {
  color: #aaa;
  font-size: 0.7rem;
  position: relative;
  padding-left: 19px;
  margin-top: 8px;
  float: right;
}

.product-sold i {
  width: 15px;
  height: 12px;
  position: absolute;
  left: 0;
  top: 2px;
  background-size: 100%;
}

.product-sold b {
  color: #ff6a00;
  font-weight: normal;
  font-family: Arial;
}

.instruction {
  background-color: white;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  height: 40px;
}

.instruction-top {
  height: 42rpx;
  line-height: 42rpx;
  padding: 20rpx;
  border-bottom: 1px solid #f7f7f7;
  font-size: 14px;
}

.instruction-left {
  width: 126rpx;
  height: 40rpx;
  border-left: 3px solid red;
  padding-left: 10px;
}

.instruction-body {
  padding: 20rpx;
  line-height: 24px;
  background-color: white;
}

ol {
  list-style-type: demical;
  width: 100%;
}

ol li {
  color: #575757;
  display: block;
  padding-left: 8px;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0 0 8rpx 0;
  line-height: 100rpx;
  border: 0;
}

.footer-box .price {
  padding-left: 10px;
  width: 45%;
  font-size: 14px;
}

.footer-box .coupon {
  text-align: center;
  width: 50px;
  height: 100%;
  background-color: #f69919;
  color: #fff;
  font-size: 13px;
  line-height: 50rpx;
  word-wrap: break-word;
  padding: 0 15px 0 15px;
}

.footer-box .now-buy {text-align:center;
height:100%;
width:35%;
line-height:100rpx;
background-color:#e64340;
color:#fff;
font-size:14px;

}
